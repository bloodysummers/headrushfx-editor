{
  "extends": ["next", "next/core-web-vitals", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "react/no-unescaped-entities": 0,
    "react/display-name": 0,
    "prettier/prettier": [
      "error",
      {
        "useTabs": false,
        "tabSize": 2,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "arrowParens": "avoid",
        "endOfLine": "auto"
      }
    ]
  }
}
